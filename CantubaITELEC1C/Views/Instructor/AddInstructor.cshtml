@model Instructor;
<h1>Create a new Instructor</h1><br />


<form asp-action="AddInstructor" asp-controller="Instructor" method="post">
    <div class="form-group">
        <label asp-for="Id"></label>
        <input class="form-control" asp-for="Id" placeholder="Enter Id">
    </div><br />

    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input class="form-control" asp-for="FirstName" placeholder="Enter First Name">
    </div><br />

    <div class="form-group">
        <label asp-for="LastName"></label>
        <input class="form-control" asp-for="LastName" placeholder="Enter Last Name">
    </div><br />

    <div class="form-group">
        <label asp-for="IsTenured"></label>
        <select asp-for="IsTenured" asp-items="@Html.GetEnumSelectList(typeof(IsRegular))"></select>
    </div><br />

    <div class="form-group">
        <label asp-for="Rank"></label>
        <select asp-for="Rank" asp-items="@Html.GetEnumSelectList(typeof(Rank))"></select>
    </div><br />

    <div class="form-group">
        <label asp-for="HiringDate"></label>
        <input class="form-control" asp-for="HiringDate">
    </div><br />

    <div class="form-group">
        <label asp-for="Email"></label>
        <input class="form-control" asp-for="Email" placeholder="Enter Email">
    </div><br />

    <button type="submit" class="btn btn-primary">Submit</button>
</form>