@model IEnumerable<Instructor>;

<div><h1>Instructor List</h1></div><br />


<a asp-action="AddInstructor">Add Instructor</a>

<table class="table table-dark">

    <tr>
        <th colspan="7">Instructor</th>
    </tr>

    <tr>
        <td>Name</td>
        <td>Status</td>
        <td>Rank</td>
        <td>Hiring Date </td>
        <td>Details</td>
        <td>Update</td>
        <td>Delete</td>


    </tr>
    @foreach (var instructor in Model)
    {
        <tr>
            <td>@instructor.FirstName @instructor.LastName</td>
            <td>@instructor.IsTenured</td>
            <td>@instructor.Rank</td>
            <td>@instructor.HiringDate</td>
            <td><a class="btn btn-primary" asp-action="ShowDetail" asp-route-id="@instructor.Id">Show Details</a></td>
            <td><a class="btn btn-info" asp-action="UpdateInstructor" asp-route-id="@instructor.Id">Update</a></td>
            <td><a class="btn btn-danger" asp-action="Delete" asp-route-id="@instructor.Id">Delete</a></td>

        </tr>
    }
</table>