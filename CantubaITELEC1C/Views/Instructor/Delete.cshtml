@model Instructor;
<h1>Are you sure you want to delete?</h1>
<br />


<form asp-action="Delete" asp-controller="Instructor" method="post">
    <div class="form-group">
        <label asp-for="Id" hidden>Id</label>
        <input class="form-control" asp-for="Id" placeholder="Enter Id" hidden>
    </div><br />

    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input class="form-control" asp-for="FirstName" placeholder="Enter First Name" readonly>
    </div><br />

    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input class="form-control" asp-for="LastName" placeholder="Enter Last Name" readonly>
    </div><br />

    <div class="form-group">
        <label asp-for="IsTenured">Status</label>
        <select asp-for="IsTenured" asp-items="@Html.GetEnumSelectList(typeof(IsRegular))" readonly></select>
    </div><br />

    <div class="form-group">
        <label asp-for="Rank">Rank</label>
        <select asp-for="Rank" asp-items="@Html.GetEnumSelectList(typeof(Rank))" readonly></select>
    </div><br />

    <div class="form-group">
        <label asp-for="HiringDate">Date Hired</label>
        <input class="form-control" asp-for="HiringDate" readonly>
    </div><br />

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input class="form-control" asp-for="Email" placeholder="Enter Email" readonly>
    </div><br />

    <button type="submit" class="btn btn-primary">Delete</button>
    <button type="button" onclick="history.back()" class="btn btn-secondary">Cancel</button>
</form>