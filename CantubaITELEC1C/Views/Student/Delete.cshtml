@model Student;
<h1>Are you sure you want to delete?</h1>
<br />


<form asp-action="Delete" asp-controller="Student" method="post">
    <div class="form-group">
        <label asp-for="Id" hidden>Id</label>
        <input asp-for="Id" placeholder="Enter Id" hidden>
    </div><br />

    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" placeholder="Enter First Name" readonly>
    </div><br />

    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" placeholder="Enter Last Name" readonly>
    </div><br />

    <div class="form-group">
        <label asp-for="IsRegular">Status</label>
        <select asp-for="IsRegular" asp-items="@Html.GetEnumSelectList(typeof(IsRegular))" readonly></select>
    </div><br />

    <div class="form-group">
        <label asp-for="Course">Course</label>
        <select asp-for="Course" asp-items="@Html.GetEnumSelectList(typeof(Course))" readonly></select>
    </div><br />

    <div class="form-group">
        <label asp-for="AdmissionDate">Date Enrolled</label>
        <input asp-for="AdmissionDate" readonly>
    </div><br />

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" placeholder="Enter Email" readonly>
    </div><br />

    <button type="submit" class="btn btn-primary">Delete</button>
    <button type="button" onclick="history.back()" class="btn btn-secondary">Cancel</button>
</form>