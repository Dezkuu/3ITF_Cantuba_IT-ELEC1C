@model Student;
<h1>Update Student</h1><br />


<form asp-action="UpdateStudent" asp-controller="Student" method="post">
    <div class="form-group">
        <label asp-for="Id" hidden>Id</label>
        <input asp-for="Id" placeholder="Enter Id" hidden>
    </div><br />

    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" placeholder="Enter First Name">
    </div><br />

    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" placeholder="Enter Last Name">
    </div><br />

    <div class="form-group">
        <label asp-for="IsRegular">Status</label>
        <select asp-for="IsRegular" asp-items="@Html.GetEnumSelectList(typeof(IsRegular))"></select>
    </div><br />

    <div class="form-group">
        <label asp-for="Course">Course</label>
        <select asp-for="Course" asp-items="@Html.GetEnumSelectList(typeof(Course))"></select>
    </div><br />

    <div class="form-group">
        <label asp-for="AdmissionDate">Date Enrolled</label>
        <input asp-for="AdmissionDate">
    </div><br />

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" placeholder="Enter Email">
    </div><br />

    <button type="submit" class="btn btn-primary">Update</button>
    <button type="button" onclick="history.back()" class="btn btn-secondary">Cancel</button>
</form>