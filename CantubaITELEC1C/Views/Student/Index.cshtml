@model IEnumerable<Student>;

<div><h1>Student List</h1></div><br />


<a asp-action="AddStudent">Add Student</a>

<table class="table table-dark">

    <tr>
        <th colspan="7">Student</th>
    </tr>

    <tr>
        <td>Name</td>
        <td>Status</td>
        <td>Course</td>
        <td>Admission Date</td>
        <td>Details</td>
        <td>Update</td>
        <td>Delete</td>


    </tr>
    @foreach (var student in Model)
    {
        <tr>
            <td>@student.FirstName @student.LastName</td>
            <td>@student.IsRegular</td>
            <td>@student.Course</td>
            <td>@student.AdmissionDate</td>
            <td><a class="btn btn-primary" asp-action="ShowDetail" asp-route-id="@student.Id">Show Details</a></td>
            <td><a class="btn btn-info" asp-action="UpdateStudent" asp-route-id="@student.Id">Update</a></td>
            <td><a class="btn btn-danger" asp-action="Delete" asp-route-id="@student.Id">Delete</a></td>

        </tr>
    }
</table>