@model Student;

<form asp-action="AddStudent" asp-controller="Student" method="post">
    <div class="form-group">
        <label asp-for="Id">Id</label>
        <input class="form-control" asp-for="Id" placeholder="Enter Id">
    </div><br />

    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input class="form-control" asp-for="FirstName" placeholder="Enter First Name">
    </div><br />

    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input class="form-control" asp-for="LastName" placeholder="Enter Last Name">
    </div><br />

    <div class="form-group">
        <label asp-for="IsRegular">Status</label>
        <select asp-for="IsRegular" asp-items="@Html.GetEnumSelectList(typeof(IsRegular))"></select>
    </div><br />

    <div class="form-group">
        <label asp-for="Course">Course</label>
        <select asp-for="Course" asp-items="@Html.GetEnumSelectList(typeof(Course))"></select>
    </div><br />

    <div class="form-group">
        <label asp-for="AdmissionDate">Date Enrolled</label>
        <input class="form-control" asp-for="AdmissionDate">
    </div><br />

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input class="form-control" asp-for="Email" placeholder="Enter Email">
    </div><br />

    <button type="submit" class="btn btn-primary">Submit</button>
</form>